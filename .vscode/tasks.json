{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
		{
            "label": "Run common_ratio_calculator.py",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args":["common_ratio_calculator.py"],
            "group": {
				"kind": "build",
				"isDefault": true
			},
            "presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			}
        },
		{
			"type": "cppbuild",
			"label": "Build geoseq_test",
			"command": "/usr/bin/gcc",
			"args": [
				"-fdiagnostics-color=always",
				"-Wall",
				"-Wextra",
				"-g",
				"geoseq_test.c",
				"geoseq_unordered_flatmap56.c",
				"-o",
				"geoseq_test",
				"-fsanitize=address",
				"-lm"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/gcc",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			}
		}
    ]
}